<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign Up</title>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous" />
        <style>
            .cascading-right {
                margin-right: -50px;
            }

            @media (max-width: 991.98px) {
                .cascading-right {
                    margin-right: 0;
                }
            }
        </style>
</head>

<body>
    <!-- Section: Design Block -->
    <section class="text-center text-lg-start" >
        <%-include('../includes/admin/navigation.ejs')%>

       

        <!-- Jumbotron -->
        <div class="container py-4 mt-5 col py-3" >
            <div class="row g-0 align-items-center justify-content-center">
                <div class="col-lg-6 mb-5 mb-lg-0">
                    <div class="card cascading-right" style="
                background: hsla(0, 0%, 100%, 0.55);
                backdrop-filter: blur(30px);
              ">
                        <div class="card-body p-5 shadow-5 text-center">
                            <h2 class="fw-bold mb-5">Update Product</h2>
                            <form method="post"  action="/admin_panel/update_products/<%=getProduct._id%>" enctype="multipart/form-data">
                                <!-- 2 column grid layout with text inputs for the first and last names -->
                                <div class="row">
                                    <div class="col-md-6 mb-4">
                                        <div class="form-outline">
                                            <input type="text" id="form3Example1" name="title"
                                                class="form-control" value="<%=getProduct.title%>"/>

                                            <label class="form-label" for="form3Example1">Title</label><br />
                                            <span id="usernameError" style="color: red"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-4">
                                        <div class="form-outline">
                                            <input type="text" id="form3Example2" name="category"
                                                class="form-control" value="<%=getProduct.category%>"/>
                                            <label class="form-label" for="form3Example2">Category</label>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-outline mb-4">
                                    <input type="number" id="form3Example3" name="stock" class="form-control" value="<%=getProduct.Stock%>"/>
                                    <label class="form-label" for="form3Example3">Stock</label><br />
                                    <span id="emailError" style="color: red"></span>
                                </div>
                                <div class="form-outline mb-4">
                                    <input type="text" id="form3Example3" name="size" class="form-control" value="<%=getProduct.size%>"/>
                                    <label class="form-label" for="form3Example3">Size</label><br />
                                    <span id="emailError" style="color: red"></span>
                                </div>

                                <div class="form-outline mb-4">
                                    <input type="tel" id="form3Example3" name="price" class="form-control" value="<%=getProduct.price%>"/>
                                    <label class="form-label" for="form3Example3">Price</label><br />
                                    <span id="emailError" style="color: red"></span>
                                </div>
                                <div class="input-box addimg">
                                    <label for="image">
                                        AddImage
                                        <img src="/uploads/<%=getProduct.imageUrl%>" alt="" for="myFiles" width="70px">
                                        <input type="file" name="myFiles" style="display: none;" id="image" value="<%=getProduct.imageUrl%>">
                                    </label>
                                </div>

                                <div class="form-outline mb-4">
                                    <input type="text" id="form3Example3" name="description" class="form-control" value="<%=getProduct.description%>"/>
                                    <label class="form-label" for="form3Example3">Description</label><br />
                                    <span id="emailError" style="color: red"></span>
                                </div>

                                <!-- Submit button -->
                                <button type="submit" class="btn btn-primary btn-block mb-4">
                                    Submit
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Jumbotron -->
    </section>
    <!-- <script src="/public/javascript/validate.js"></script> -->
    <!-- Section: Design Block -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
        integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.min.js"
        integrity="sha384-IDwe1+LCz02ROU9k972gdyvl+AESN10+x7tBKgc9I5HFtuNz0wWnPclzo6p9vxnk"
        crossorigin="anonymous"></script>
</body>

</html>