  <%-include('../includes/admin/navigation.ejs')%>
        <div class="col py-3 user-details caption" style="background-color: #cfe2b9;">
         
          <!-- ty<pe here -->
          <h3 style="color: #555;">Order-Management</h3>
          
          <table id="table_id" class="display " style="padding: 10px;">
            <thead>
                <tr>
                    <th>No </th>
                    <th>order_id</th>
                    <th>Pay-Method</th>
                    <th>OrderStatus</th>
                    <th>Expected Delivery</th>
                    <th>Total-Amount</th>
                
                </tr>
            </thead>
            <tbody>
                <% for(let i=0;i<getOrderList.length;i++){ %>
                  
                <tr>
                    
                   
                    <td><%=[i+1]%></td>
                    <td><a href="/admin_panel/orderPrds/<%=getOrderList[i]._id%>" class="orderid"><%=getOrderList[i]._id%></a></td>
                    <td><%=getOrderList[i].paymentMethod%></td> 
                    <td>
                       
                           
                        <select  id="order_id" onchange="orderSelect(this.id,'<%=getOrderList[i]._id%>')" value="Placed">
                            
                            <option  autocomplete="off">Pending</option>
                            <option  autocomplete="off">Placed</option>
                            <option  autocomplete="off">Shipped</option>
                            <option  autocomplete="off">Delivered</option>
                        </select>
                   
                    </td>
                    <td><%=getOrderList[i].deliveryDate%></td>   
                    <td><%=getOrderList[i].totalAmount%></td>   

                </tr>
            <%}%>
               
                
            </tbody>
        </table>
        
        
  </body>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>

