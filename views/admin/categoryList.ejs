  </head>
  <%-include('../includes/admin/navigation.ejs')%>
        <div class="col py-3 user-details" style="background-color: #cfe2b9;">
        
          <!-- type here -->
          <div style="text-align: end; margin: 0 10px 5px 0px; margin-right: 20px; margin-bottom: 10px; display: flex; justify-content: space-between;">
            <h3 class="heading">Category-List</h3>
            <a href="/add-category" class="add"><i class="fa fa-plus" aria-hidden="true" ></i></a>
          </div>

          
          
          <table class="table  table-hover">
            <thead class="thead table-dark " >
              <tr>
                <th scope="col">No</th>
                <th scope="col">Category Name</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
                
              </tr>
            </thead>
            <tbody>
              <%for(let i=0;i<getCategoryList.length;i++){%>
              
                <tr id="categoryId">
                  <td scope="row"><%=[i+1]%></td>
                  <td><%=getCategoryList[i].Name%></td>
                  
                  <td><a href="/edit-category/<%=getCategoryList[i]._id%>" class="text-decoration-none text-dark " ><span class="material-symbols-outlined" id="edit">
                    edit
                    </span></a></td>
                  <td><a onclick="dele('<%=getCategoryList[i]._id%>');" class="dele"><span class="material-symbols-outlined">
                    delete
                    </span></a></td>
                </tr>
              
            <% } %>
            </tbody>
          </table>
         
        
        </div>
        
  </body>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
