    <div class="banner-container">
    <div class="banner-text-box">
        <h1 class="heading-primary"><%=getBanner[i].head%></h1>
        <p class="shop-description"><%=getBanner[i].description%></p>
        <a href="<%=getBanner[i].url%> " class="btns"><%=getBanner[i].btnName%> &rarr;</a>
