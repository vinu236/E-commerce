                  <div class="description-prod">
                    <p><%=getProducts[i].description%></p>
                  </div>
                  <div class="card-footer">
                    
                      
                    
                    
                    <div class="wcf-left"><span class="price"><strong>&#x20B9;</strong> <%=getProducts[i].price%></span></div>
                    <div class="wcf-right"> 
                      <ion-icon name="heart" class="wishlist"" onclick="wishlist('<%=getProducts[i]._id%>')"></ion-icon>   
                      <i class="fa-solid fa-cart-plus" onclick="ajaxCart('<%=getProducts[i]._id%>')" style="margin-left:30px; cursor: pointer;" ></i></div>
                    
                  </div>
                </div>
              </div>
            </div>
