<body>
	<%-include('../includes/user/navbar.ejs')%>

	<%if(userWishlistCheck.length){%>
	<div class="cart-wrap">
		<div class="container">
	        <div class="row">
			    <div class="col-md-12">
			        <div class="main-heading mb-10">My wishlist</div>
			        <div class="table-wishlist">
				        <table cellpadding="0" cellspacing="0" border="0" width="100%">
				        	<thead>
					        	<tr>
					        		<th width="45%">Product Name</th>
					        		<th width="15%">Unit Price</th>
					        		
					        		<th width="15%"></th>
					        		<th width="10%"></th>
					        	</tr>
					        </thead>
					        <tbody>
								<%userWishlistCheck.forEach(data=>{%>

								
					        	<tr id="<%=data.productData._id%>">
					        		<td width="45%">
					        			<div class="display-flex align-center">
		                                    <div class="img-product">
		                                        <img src="uploads/<%=data.productData.imageUrl%>" alt="" class="mCS_img_loaded">
		                                    </div>
		                                    <div class="name-product">
		                                       <%=data.productData.title%>
		                                    </div>
	                                    </div>
	                                </td>
					        		<td width="15%" class="price"><%=data.productData.price%></td>
					        		<!-- <td width="15%"><span class="in-stock-box">In Stock</span></td> -->
					        		<td width="15%"><button class="round-black-btn small-btn" onclick="deleteWishlist('<%=data.productData._id%>')">Remove</button></td>
					        		
					        	</tr>
							<%})%>
				        	</tbody>
				        </table>
				    </div>
			    </div>
			</div>
		</div>
	</div>
<%}else{%>
	<div class="empty">
		
			<h2>Empty-Wishlist</h2>
			
		</div>
	</div>

<%}%>
	
</body>
