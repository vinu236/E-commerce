  <link rel="stylesheet" href="css/landing page.css" />
  <style>
    *{
    margin:0px;
    padding:0px;
    box-sizing: border-box;
    font-family: sans-serif;
}
section{
    position: relative;
}
.section--1 img{
width:100%;
margin-bottom:60px;

}
.shp-btn{
    background-color: rgb(247, 245, 245);
    border:0px;
    border-radius:20px;
    width:110px;
    height: 40px;
    position: absolute;
    top: 400px;
    right:1200px;
    
}
.heading--1{
    text-align: center;
}
.card-heading{
    text-align: center;
}

.row--container
{box-shadow: rgba(0, 0, 0, 0.1) 0px 0px 5px 0px, rgba(0, 0, 0, 0.1) 0px 0px 1px 0px;
    width:300px;
    
}
.detail{
    list-style: none;
    display: flex;
    justify-content: space-between;

}
/* --------img --------- */
.h--1{
   height:300px;
}
/* ---------price----------- */
.price{
    font-size: 20px;
}
.add-cart{
text-decoration: none;
color: black;
}
.box{
    display: flex;
    justify-content: space-around;
    flex-wrap: wrap;
    gap: 15px;
}
  </style>
</head>
<body>
 <!-- navbar Starting----------------------------------------------------------- -->
 <%-include('../includes/user/navbar.ejs')%>
  
  <!-- ---------------------------navbar Ending------------------------------------ -->
    <section class="section--2" style="border-top: .5px solid black;">
        
      <div class="dropdown " style=margin-left:20px>
        <button class="btn  dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
          Category
        </button>
        <ul class="dropdown-menu">
          <%for(i=0;i<Category.length;i++){%>
          <li><a class="dropdown-item" href="/shop/?category=<%=Category[i].Name%>"><%=Category[i].Name%></a></li>
          <%}%>
        </ul>
      </div>
      
        <!-- box-starting---------------------------------------------- -->
        
        <div class="box"  >
          <%for(let i=0;i<shopProducts.length;i++){%>
          <div class="row--container">
            <a href="/product-details?id=<%=shopProducts[i]._id%>">
            <img src="/uploads/<%=shopProducts[i].imageUrl%> " class="hoddie h--1" />
          </a>
            <h4 class="card-heading"><%=shopProducts[i].title%></h4>
            <ul class="detail" style="margin-left:25%">
              <li class="price">Rs:<%=shopProducts[i].price%></li>
              <li>
      
              </li>
            </ul>
          </div>
          <%}%> 
          <!----- -->
        </div>
       
      </section>
   

</body>
