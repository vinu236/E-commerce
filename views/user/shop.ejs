<body>
  <%-include('../includes/user/navbar.ejs')%>
  <!-- ---------------------------------navbar------------------------------------------ -->
  
  <!-- ----------------------------------------------------------------------------------- -->
  
    <!-- ------------------------------------------------------------------- -->


       <!-- Start Content -->
       
       
        <div class="container py-5">
          <div class="row">
  
            <div class="col-lg-3">
              <h1 class="h2 pb-4">Filters</h1>
              <div class="dropdown " style="margin-left:20px; border-top: 1px solid #eee;">
                <button class="btn  dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                  Category
                </button>
                <ul class="dropdown-menu">
                  <%for(i=0;i<Category.length;i++){%>
                  <li><a class="dropdown-item" href="/shop/?category=<%=Category[i].Name%>"><%=Category[i].Name%></a></li>
                  <%}%>
                </ul>
              </div>
              
          </div>
             
  
              <div class="col-lg-9">
                <div class="row">
                    <%for(let i=0;i<shopProducts.length;i++){%>
                        <div class="col-md-3">
                          <div class="card mb-4 product-wap rounded-0">
                              <div class="card rounded-0" width="100px">
                                  <img class="card-img rounded-0 img-fluid" src="/uploads/<%=shopProducts[i].imageUrl%> " height="100px">
                                  <div class="card-img-overlay rounded-0 product-overlay d-flex align-items-center justify-content-center">
                                      <ul class="list-unstyled">
                                          <li><a class="btn btn-success text-white" ><i class="far fa-heart"  onclick="wishlist('<%=shopProducts[i]._id%>')"></i></a></li>
                                          <li><a class="btn btn-success text-white mt-2" href="/product-details?id=<%=shopProducts[i]._id%>"><i class="far fa-eye"></i></a></li>
                                          <li><a class="btn btn-success text-white mt-2" ><i class="fas fa-cart-plus" onclick="ajaxCart('<%=shopProducts[i]._id%>')"></i></a></li>
                                      </ul>
                                  </div>
                              </div>
                              <div class="card-body">
                                  <a href="shop-single.html" class="h3 text-decoration-none"><%=shopProducts[i].title%></a>
                                  <ul class="w-100 list-unstyled d-flex justify-content-between mb-0">
                                      
                                      
                                  </ul>
                                  <ul class="list-unstyled d-flex justify-content-center mb-1">
                                      <li>
                                        <%=shopProducts[i].category%>
                                      </li>
                                  </ul>
                                  <p class="text-center mb-0"><strong>&#x20B9;</strong> <%=shopProducts[i].price%></p>
                              </div>
                          </div>
                        </div>
                        <%}%>
                      
                  </div>
                  
              </div>
  
          </div>
      
            
      
</body>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
